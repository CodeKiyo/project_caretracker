<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addpatient_header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#95F1FD"
        android:gravity="center"
        android:text="Add Patient Info"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/age_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="text" />

    <EditText
        android:id="@+id/dateofbirth_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Date of Birth"
        android:inputType="text" />

    <EditText
        android:id="@+id/gender_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Gender"
        android:inputType="text" />

    <EditText
        android:id="@+id/bloodtype_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Blood Type"
        android:inputType="text" />

    <EditText
        android:id="@+id/civilstatus_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Civil Status"
        android:inputType="text" />

    <EditText
        android:id="@+id/nationality_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Nationality"
        android:inputType="text" />

    <EditText
        android:id="@+id/religion_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Religion"
        android:inputType="text" />

    <EditText
        android:id="@+id/address_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="text" />

    <EditText
        android:id="@+id/email_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text" />

    <EditText
        android:id="@+id/mobileno_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Mobile No."
        android:inputType="text" />

    <EditText
        android:id="@+id/emergencyname_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Emergency Contact Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/emergencymobile_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Emergency Contact Mobile No."
        android:inputType="text" />

    <Button
        android:id="@+id/addpatient_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Patient" />

</LinearLayout>