<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6E7F0"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Test Info Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_lightgreen2"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp">

        <!-- Test Type Header -->
        <TextView
            android:id="@+id/test_type"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:text="Test Type"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Test Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/test_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textColor="#007161"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/test_date_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MM/DD/YYYY"
                android:textColor="#007161"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Result Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/result_status_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result Status:"
                android:textColor="#007161"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/result_status_details_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;Input Status&gt;"
                android:textColor="#007161"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Key Findings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/key_findings_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key Findings:"
                android:textColor="#007161"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/key_findings_details_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;Input Findings&gt;"
                android:textColor="#007161"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Test Components -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/test_components_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Components:"
                android:textColor="#007161"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/test_components_details_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;Input Components&gt;"
                android:textColor="#007161"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Comments -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments:"
                android:textColor="#007161"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/comments_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;Input Comments&gt;"
                android:textColor="#007161"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
