<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6E7F0"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Test Info Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_lightgreen2"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp">

        <!-- Test Type Header -->

        <!-- Test Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/test_type"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:text="Test Type"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/test_date_data"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- Result Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/result_status_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="RESULT STATUS:"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/result_status_details_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;Input Status&gt;"
                android:textColor="#007161"
                android:textSize="14sp" />
        </LinearLayout>
        </LinearLayout>
        <!-- Key Findings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/key_findings_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="KEY FINDINGS:"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/key_findings_details_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;Input Findings&gt;"
                android:textColor="#007161"
                android:textSize="14sp" />
        </LinearLayout>
        </LinearLayout>
        <!-- Test Components -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/test_components_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST COMPONENTS:"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/test_components_details_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;Input Components&gt;"
                android:textColor="#007161"
                android:textSize="14sp" />
        </LinearLayout>
        </LinearLayout>
        <!-- Comments -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMMENTS:"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comments_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;Input Comments&gt;"
                android:textColor="#007161"
                android:textSize="14sp" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
