<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E7F0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/backbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="35dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:foregroundTint="#606060"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/header_caretracker_back" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="53dp"
            app:srcCompat="@drawable/header_caretracker_name" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            app:srcCompat="@drawable/header_caretracker_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner_bluegreen1"
        android:elevation="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/patient_medical_statictext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/jetbrainsmono_medium"
            android:text="Creating a New Record"
            android:textColor="#BDE4FB"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:foreground="?attr/selectableItemBackground"
        android:foregroundTint="#606060"
        app:cardBackgroundColor="#F8F9FB"
        app:cardCornerRadius="14dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/record_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/geist_medium"
                    android:text="Record Number: "
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/weight_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geist_medium"
                    android:text="Weight:"
                    android:textColor="#1D1D1D"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:ems="20"
                    android:inputType="numberDecimal"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/heartrate_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geist_medium"
                    android:text="Heart Rate:"
                    android:textColor="#1D1D1D"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addHeartRate"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:ems="20"
                    android:inputType="number"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bloodpressure_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geist_medium"
                    android:text="Blood Pressure:"
                    android:textColor="#1D1D1D"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addBloodPress"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:ems="20"
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bodytemperature_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geist_medium"
                    android:text="Body Temperature:"
                    android:textColor="#1D1D1D"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addBodyTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:ems="20"
                    android:inputType="numberDecimal"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/respirationrate_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geist_medium"
                    android:text="Respiration Rate:"
                    android:textColor="#1D1D1D"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addRespRate"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:ems="20"
                    android:inputType="number"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chiefcomplaint_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geist_medium"
                    android:text="Chief Complaint:"
                    android:textColor="#1D1D1D"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addChiefComp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:ems="20"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/objectives_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geist_medium"
                    android:text="Objectives:"
                    android:textColor="#1D1D1D"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addObject"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:ems="20"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/diagnosis_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geist_medium"
                    android:text="Diagnosis:"
                    android:textColor="#1D1D1D"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addDiagno"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:ems="20"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plan_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geist_medium"
                    android:text="Plan:"
                    android:textColor="#1D1D1D"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:ems="20"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comments_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/geist_medium"
                    android:text="Comments:"
                    android:textColor="#1D1D1D"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addComment"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:ems="20"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />

            </LinearLayout>

            <Button
                android:id="@+id/saveButt"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_corner_lightgreen2"
                android:backgroundTint="#3A3A3A"
                android:enabled="false"
                android:foreground="?attr/selectableItemBackground"
                android:foregroundTint="#606060"
                android:text="Add Record"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>
</LinearLayout>