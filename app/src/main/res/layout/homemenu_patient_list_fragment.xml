<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E7F0"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="174dp"
        android:layout_height="80dp"
        android:layout_marginStart="35dp"
        app:srcCompat="@drawable/login_caretracker_logo" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner_lightgreen"
        android:elevation="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/homemenu_patient_list_statictext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/geist_medium"
            android:text="Welcome Back,"
            android:textColor="#9DF4CC"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/homemenu_patient_list_statictext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Cruz, John"
            android:textColor="#F3F3F3"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/urw_geometric_bold"
        android:text="Today's Patients"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner_seagreen"
        android:elevation="4dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/patientlistRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>